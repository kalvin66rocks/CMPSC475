<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kalvi_000.fragmentationproject.MainActivity">

    <fragment
        android:id="@+id/showAnswerFragLayout"
        android:name="com.kalvi_000.fragmentationproject.showAnswerFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:layout="@layout/show_answer_frag"
        android:layout_marginStart="90dp"
        android:layout_alignTop="@+id/fragmentButtons"
        android:layout_toEndOf="@+id/fragmentButtons" />

    <fragment
        android:id="@+id/fragmentButtons"
        android:name="com.kalvi_000.fragmentationproject.selectAnswerFrag"
        class="com.kalvi_000.fragmentationproject.selectAnswerFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:layout="@layout/select_answer_frag"
        android:layout_marginTop="42dp"
        android:layout_marginStart="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
