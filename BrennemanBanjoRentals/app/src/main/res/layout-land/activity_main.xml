<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kalvi_000.brennemanbanjorentals.MainActivity"
    android:background="@drawable/banjo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:text="@string/baseRentalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="true"
            android:background="@color/white" />

        <TextView
            android:text="@string/zeroDollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/baseRentalValue"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginStart="62dp"
            android:layout_toRightOf="@+id/textView3"
            android:background="@color/white"
            android:layout_alignParentRight="false"
            android:textAlignment="textEnd" />

        <TextView
            android:text="@string/stateSalesTaxName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="false"
            android:layout_alignRight="@+id/textView3"
            android:background="@color/white" />

        <TextView
            android:text="@string/zeroDollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/salesTaxValue"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentEnd="false"
            android:layout_alignLeft="@+id/baseRentalValue"
            android:background="@color/white"
            android:layout_alignRight="@+id/baseRentalValue"
            android:textAlignment="textEnd" />

        <TextView
            android:text="@string/insuranceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="18sp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="false"
            android:layout_alignRight="@+id/textView3"
            android:background="@color/white" />

        <TextView
            android:text="@string/zeroDollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insuranceValue"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentEnd="false"
            android:layout_alignLeft="@+id/baseRentalValue"
            android:background="@color/white"
            android:layout_alignRight="@+id/baseRentalValue"
            android:textAlignment="textEnd" />

        <TextView
            android:text="@string/totalCostName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="18sp"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="false"
            android:layout_alignRight="@+id/textView3"
            android:background="@color/white" />

        <TextView
            android:text="@string/zeroDollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalCostValue"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentEnd="false"
            android:layout_alignLeft="@+id/baseRentalValue"
            android:background="@color/white"
            android:layout_alignRight="@+id/baseRentalValue"
            android:textAlignment="textEnd" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignWithParentIfMissing="false"
        android:layout_height="wrap_content"
        android:id="@+id/userInputLayout"
        android:layout_width="350dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_below="@+id/switch2"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/switch2" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numBanjosET"
            android:hint="@string/hintBanjos"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="175dp" />

        <TextView
            android:text="@string/numBanjos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/banjos"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/numBanjosET"
            android:layout_alignBottom="@+id/numBanjosET"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/numBanjosET"
            android:layout_marginTop="15dp"
            android:background="@color/white" />

        <TextView
            android:text="@string/numCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="47dp"
            android:id="@+id/cases"
            android:textSize="18sp"
            android:background="@color/white"
            android:layout_alignRight="@+id/banjos" />

        <EditText
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numCasesET"
            android:hint="@string/hintCases"
            android:layout_alignBaseline="@+id/cases"
            android:layout_alignBottom="@+id/cases"
            android:layout_alignParentEnd="true" />

        <Switch
            android:text="@string/insuranceSwitchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch2"
            android:layout_below="@+id/numCasesET"
            android:layout_alignParentStart="true"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="18sp"
            android:background="@color/white"
            android:layout_alignRight="@+id/banjos" />
    </RelativeLayout>
</RelativeLayout>
